<hibernate-mapping>
    <class name="ru.job4j.models.Machine" table="machine">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <many-to-one name="transmission"
                     column="transmission"
                     cascade="all"
                     class="ru.job4j.models.Transmission"/>
        <many-to-one name="engine"
                     column="engine"
                     cascade="all-delete-orphan"
                     unique="true"
                     fetch="join"
                     lazy="false"
                     class="ru.job4j.models.Engine"/>
        <many-to-one name="gearBox"
                     column="gear_box"
                     cascade="all"
                     unique="true"
                     class="ru.job4j.models.GearBox"/>
    </class>
</hibernate-mapping>